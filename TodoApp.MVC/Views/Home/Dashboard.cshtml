@{
ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Todo" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm text-white bg-primary mb-3 hover-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Toplam Görev</span>
                        <i class="bi bi-list-check fs-4"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title display-4">@ViewBag.TotalTodos</h5>
                        <p class="card-text">Tüm görevleriniz</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Todo" asp-action="Index" asp-route-isCompleted="true" class="text-decoration-none">
                <div class="card shadow-sm text-white bg-success mb-3 hover-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Tamamlanan</span>
                        <i class="bi bi-check-circle fs-4"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title display-4">@ViewBag.CompletedTodos</h5>
                        <p class="card-text">Tamamlanan görevler</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Todo" asp-action="Index" asp-route-isCompleted="false" class="text-decoration-none">
                <div class="card shadow-sm text-white bg-warning mb-3 hover-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Devam Eden</span>
                        <i class="bi bi-hourglass-split fs-4"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title display-4">@ViewBag.IncompleteTodos</h5>
                        <p class="card-text">Devam eden görevler</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a class="btn btn-primary btn-lg" asp-controller="Todo" asp-action="Create">
                <i class="bi bi-plus-circle me-2"></i>Yeni Görev Ekle
            </a>
        </div>
    </div>
</div>

@section Styles {
<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .card {
        cursor: pointer;
    }
</style>
}