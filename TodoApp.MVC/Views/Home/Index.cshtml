@{
    ViewData["Title"] = "Ana Sayfa";
}

@if (User.Identity?.IsAuthenticated ?? false)
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-body text-center p-5">
                        <h1 class="display-4 mb-4">Hoş Geldiniz, @User.Identity.Name!</h1>
                        <p class="lead mb-4">ToDo uygulamanıza göz atın ve görevlerinizi yönetin.</p>
                        <hr class="my-4">
                        <p class="mb-4">Hemen yeni bir görev ekleyin veya mevcut görevlerinizi düzenleyin.</p>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <a class="btn btn-primary btn-lg shadow-sm" asp-controller="Todo" asp-action="Index">
                                <i class="bi bi-list-task"></i> Görevlerime Git
                            </a>
                            <a class="btn btn-success btn-lg shadow-sm" asp-controller="Todo" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> Yeni Görev Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-body text-center p-5">
                        <h1 class="display-4 mb-4">ToDo Uygulamasına Hoş Geldiniz!</h1>
                        <p class="lead mb-4">Görevlerinizi kolayca yönetin ve organize edin.</p>
                        <hr class="my-4">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="feature-box p-3">
                                    <i class="bi bi-check-circle fs-1"></i>
                                    <h3>Kolay Kullanım</h3>
                                    <p>Basit ve kullanıcı dostu arayüz</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="feature-box p-3">
                                    <i class="bi bi-shield-check fs-1"></i>
                                    <h3>Güvenli</h3>
                                    <p>Güvenli veri saklama</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="feature-box p-3">
                                    <i class="bi bi-graph-up fs-1"></i>
                                    <h3>Takip Et</h3>
                                    <p>Görevlerinizi kolayca takip edin</p>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <a class="btn btn-primary btn-lg shadow-sm" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </a>
                            <a class="btn btn-success btn-lg shadow-sm" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Kayıt Ol
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        .feature-box {
            transition: transform 0.3s ease;
        }
        .feature-box:hover {
            transform: translateY(-5px);
        }
    </style>
}